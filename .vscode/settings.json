{
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  // Issues with unit test files
  //"editor.trimAutoWhitespace": false,
  "files.eol": "\n",
  "files.insertFinalNewline": true,

  "search.exclude": {
    "**/.git": true,
    "**/build": true,
    "**/node_modules": true,
    "**/dist": true
  },
  "files.watcherExclude": {
    "**/.git": true,
    "**/build": true,
    "**/node_modules": true,
    "**/dist": true
  },
  "workbench.colorCustomizations": {
    "activityBar.background": "#442238",
    "titleBar.activeBackground": "#5F304E",
    "titleBar.activeForeground": "#FCF9FB"
  }
}
